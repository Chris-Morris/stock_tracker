            <td class="table-font-color"> <%= currency(@income_statement[@interval][@keys[0]]["totalOperatingExpenses"]) %></td>
            <td class="table-font-color"> <%= currency(@income_statement[@interval][@keys[1]]["totalOperatingExpenses"]) %></td>
            <td class="table-font-color"> <%= currency(@income_statement[@interval][@keys[2]]["totalOperatingExpenses"]) %></td>
            <td class="table-font-color"> <%= currency(@income_statement[@interval][@keys[3]]["totalOperatingExpenses"]) %></td>
          </tr>
          <tr>
            <th scope="row" class="table-font-color">Operating Income or Loss:</th>
            <td class="table-font-color"> <%= currency(@income_statement[@interval][@keys[0]]["operatingIncome"]) %></td>
            <td class="table-font-color"> <%= currency(@income_statement[@interval][@keys[1]]["operatingIncome"]) %></td>
            <td class="table-font-color"> <%= currency(@income_statement[@interval][@keys[2]]["operatingIncome"]) %></td>
            <td class="table-font-color"> <%= currency(@income_statement[@interval][@keys[3]]["operatingIncome"]) %></td>
          </tr>
          <tr>
