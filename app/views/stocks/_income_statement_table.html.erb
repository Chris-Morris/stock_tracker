<div class="col-12">
  <div class="card">
    <div class="card-header bg-primary">
      <strong style="color: white;">Income Statement</strong>
    </div>

    <div class="card-body">
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th scope="col">Item</th>
            <th scope="col"><%= @keys[0] %></th>
            <th scope="col"><%= @keys[1] %></th>
            <th scope="col"><%= @keys[2] %></th>
            <th scope="col"><%= @keys[3] %></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="row" class="table-font-color">Total Revenue:</th>
            <td class="table-font-color"> <%= currency(@income_statement[@interval][@keys[0]]["totalRevenue"]) %></td>
            <td class="table-font-color"> <%= currency(@income_statement[@interval][@keys[1]]["totalRevenue"]) %></td>
            <td class="table-font-color"> <%= currency(@income_statement[@interval][@keys[2]]["totalRevenue"]) %></td>
            <td class="table-font-color"> <%= currency(@income_statement[@interval][@keys[3]]["totalRevenue"]) %></td>
          </tr>
          <tr>
            <th scope="row" class="table-font-color">Cost of Revenue:</th>
            <td class="table-font-color"> <%= currency(@income_statement[@interval][@keys[0]]["costOfRevenue"]) %></td>
            <td class="table-font-color"> <%= currency(@income_statement[@interval][@keys[1]]["costOfRevenue"]) %></td>
            <td class="table-font-color"> <%= currency(@income_statement[@interval][@keys[2]]["costOfRevenue"]) %></td>
            <td class="table-font-color"> <%= currency(@income_statement[@interval][@keys[3]]["costOfRevenue"]) %></td>
          </tr>
          <tr>
            <th scope="row" class="table-font-color">Gross Profit:</th>
            <td class="table-font-color"> <%= currency(@income_statement[@interval][@keys[0]]["grossProfit"]) %></td>
            <td class="table-font-color"> <%= currency(@income_statement[@interval][@keys[1]]["grossProfit"]) %></td>
            <td class="table-font-color"> <%= currency(@income_statement[@interval][@keys[2]]["grossProfit"]) %></td>
            <td class="table-font-color"> <%= currency(@income_statement[@interval][@keys[3]]["grossProfit"]) %></td>
          </tr>
          <tr>
            <th scope="row" class="table-font-color">Operating Expenses:</th>
            <td class="table-font-color"> <%= currency(@income_statement[@interval][@keys[0]]["operatingExpenses"]) %></td>
            <td class="table-font-color"> <%= currency(@income_statement[@interval][@keys[1]]["operatingExpenses"]) %></td>
            <td class="table-font-color"> <%= currency(@income_statement[@interval][@keys[2]]["operatingExpenses"]) %></td>
            <td class="table-font-color"> <%= currency(@income_statement[@interval][@keys[3]]["operatingExpenses"]) %></td>
          </tr>
          <tr>
            <td scope="row" class="table-font-color" style="padding-left: 15px;">Research & Development:</td>
            <td class="table-font-color"> <%= currency(@income_statement[@interval][@keys[0]]["researchDevelopment"]) %></td>
            <td class="table-font-color"> <%= currency(@income_statement[@interval][@keys[1]]["researchDevelopment"]) %></td>
            <td class="table-font-color"> <%= currency(@income_statement[@interval][@keys[2]]["researchDevelopment"]) %></td>
            <td class="table-font-color"> <%= currency(@income_statement[@interval][@keys[3]]["researchDevelopment"]) %></td>
          </tr>
          <tr>
            <th scope="row" class="table-font-color">Selling, General & Administrative:</th>
            <td class="table-font-color"> <%= currency(@income_statement[@interval][@keys[0]]["sellingGeneralAdministrative"]) %></td>
            <td class="table-font-color"> <%= currency(@income_statement[@interval][@keys[1]]["sellingGeneralAdministrative"]) %></td>
            <td class="table-font-color"> <%= currency(@income_statement[@interval][@keys[2]]["sellingGeneralAdministrative"]) %></td>
            <td class="table-font-color"> <%= currency(@income_statement[@interval][@keys[3]]["sellingGeneralAdministrative"]) %></td>
          </tr>
          <tr>
