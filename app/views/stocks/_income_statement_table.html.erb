            <td class="table-font-color"> <%= currency(@income_statement[@interval][@keys[0]]["interestExpense"]) %></td>
            <td class="table-font-color"> <%= currency(@income_statement[@interval][@keys[1]]["interestExpense"]) %></td>
            <td class="table-font-color"> <%= currency(@income_statement[@interval][@keys[2]]["interestExpense"]) %></td>
            <td class="table-font-color"> <%= currency(@income_statement[@interval][@keys[3]]["interestExpense"]) %></td>
          </tr>
          <tr>
            <th scope="row" class="table-font-color">Total other income/expenses net:</th>
            <td class="table-font-color"> <%= currency(@income_statement[@interval][@keys[0]]["totalOtherIncomeExpenseNet"]) %></td>
            <td class="table-font-color"> <%= currency(@income_statement[@interval][@keys[1]]["totalOtherIncomeExpenseNet"]) %></td>
