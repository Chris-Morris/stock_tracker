            <td class="table-font-color"> <%= currency(@income_statement[@interval][@keys[0]]["incomeBeforeTax"]) %></td>
            <td class="table-font-color"> <%= currency(@income_statement[@interval][@keys[1]]["incomeBeforeTax"]) %></td>
