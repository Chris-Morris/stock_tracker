<div style="width: 20%;">
  <h2>Scan</h2>

  <div style="displa: flex; justify-content: column;">
    <%= form_with(model: scan) do |form| %>
      <div>
        <%= form.label :title, style: "display: block" %>
        <%= form.text_field :title, class: "form-control" %>
      </div>

      <div class="card">
        <div class="card-header bg-primary">
          <h3 style="color: white;">General</h3>
        </div>
        <div class="card-body">
          <div>
            <%= form.label :sector, style: "display: block" %>
            <%= form.text_field :sector, class: "form-control" %>
          </div>
        
          <div>
            <%= form.label :industry, style: "display: block" %>
            <%= form.text_field :industry, class: "form-control" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div> 