          <div>
            <%= form.label :operating_cash_ratio, style: "display: block" %>
            <%= form.number_field :operating_cash_ratio, class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="card">
        <div class="card-header bg-primary">
          <h3 style="color: white;">Asset Management</h3>
        </div>
        <div class="card-body">
          <div>
            <%= form.label :inventory_turnover, style: "display: block" %>
            <%= form.number_field :inventory_turnover, class: "form-control" %>
          </div>

          <div>
            <%= form.label :days_sales_outstanding, style: "display: block" %>
            <%= form.number_field :days_sales_outstanding, class: "form-control" %>
          </div>

          <div>
            <%= form.label :receivables_turnover, style: "display: block" %>
            <%= form.number_field :receivables_turnover, class: "form-control" %>
          </div>

          <div>
            <%= form.label :fixed_assets_turnover, style: "display: block" %>
            <%= form.number_field :fixed_assets_turnover, class: "form-control" %>
          </div>

          <div>
            <%= form.label :total_assets_turnover, style: "display: block" %>
            <%= form.number_field :total_assets_turnover, class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="card">
        <div class="card-header bg-primary">
          <h3 style="color: white;">Market Value</h3>
        </div>
        <div class="card-body">
          <div>
            <%= form.label :price_to_earnings, style: "display: block" %>
            <%= form.number_field :price_to_earnings, class: "form-control" %>
          </div>

          <div>
            <%= form.label :market_to_book_value, style: "display: block" %>
            <%= form.number_field :market_to_book_value, class: "form-control" %>
          </div>

          <div>
            <%= form.label :dividends_per_share, style: "display: block" %>
            <%= form.number_field :dividends_per_share, class: "form-control" %>
          </div>

          <div>
            <%= form.label :dividend_payout, style: "display: block" %>
            <%= form.number_field :dividend_payout, class: "form-control" %>
          </div>

          <div>
            <%= form.label :dividend_yield, style: "display: block" %>
            <%= form.number_field :dividend_yield, class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="card">
        <div class="card-header bg-primary">
          <h3 style="color: white;">Altman Z-Score and Piotroski F-Index</h3>
        </div>
        <div class="card-body">
          <div>
            <%= form.label :altman_z_score, style: "display: block" %>
            <%= form.number_field :altman_z_score, class: "form-control" %>
          </div>

          <div>
            <%= form.label :piotroski_f_index, style: "display: block" %>
            <%= form.number_field :piotroski_f_index, class: "form-control" %>
          </div>
        </div>
      </div>

      <div>
        <%= form.submit %>
      </div>
  <% end %>
</div>